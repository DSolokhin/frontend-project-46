{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "import/extensions": ["error", "ignorePackages"],
    "import/no-unresolved": "off",
    "no-console": "off",
    "no-underscore-dangle": ["error", { "allow": ["__dirname", "__filename"] }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "test": "readonly",
    "expect": "readonly"
  }
}
